{{ 'section-collection-list.min.css' | asset_url | stylesheet_tag }}

{% unless section.settings.content-position == 'below-image' %}
    {% assign stretch_img = true %}
    <style>
        .section--{{ section.id }} .homepage-collection-grid-inner {
            display: grid;
            grid-template-columns: 1fr;
            grid-template-rows: 1fr;
        }

        .section--{{ section.id }} .homepage-collection-grid-inner .grid-image,
        .section--{{ section.id }} .homepage-collection-grid-inner .grid-item-details--hover,
        .section--{{ section.id }} .homepage-collection-grid-inner .grid-item-details--overlay,
        .section--{{ section.id }} .homepage-collection-grid-inner .grid-item-details--custom {
            grid-column: 1 / 2;
            grid-row: 1 / 2;
        }

        .section--{{ section.id }} .homepage-collection-grid-inner .responsive-image-wrapper,
        .section--{{ section.id }} .homepage-collection-grid-inner .responsive-image-wrapper img {
            height: 100%;
        }

        /* Custom content position styles */
        .section--{{ section.id }} .grid-item-details--custom {
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: flex-start !important;
            align-items: flex-start !important;
            padding: 30px;
            z-index: 2;
            height: 100%;
        }

        .section--{{ section.id }} .grid-item-details--custom .grid-item__content {
            align-self: flex-start !important;
            margin-top: 0 !important;
            width: 100% !important;
            text-align: left !important;
            position: absolute !important;
            top: 0 !important;
            left: 0 !important;
            padding: 30px !important;
            display: flex !important;
            flex-direction: column !important;
            justify-content: flex-start !important;
            align-items: flex-start !important;
        }

        /* Force all content inside grid-item__content to align left */
        .section--{{ section.id }} .grid-item-details--custom .grid-item__content * {
            text-align: left !important;
            margin-left: 0 !important;
            margin-right: auto !important;
        }

        .section--{{ section.id }} .grid-item-details--custom .grid-item__subheading {
            margin-bottom: 8px;
            text-align: left !important;
            display: block !important;
        }

        .section--{{ section.id }} .grid-item-details--custom .grid-item__title {
            font-size: 1.125rem !important;
            margin: 0 !important;
            z-index: 3;
            text-align: left !important;
            display: block !important;
            position: relative !important;
        }

        /* Specifically target the h3 element that contains collection_title */
        .section--{{ section.id }} .grid-item-details--custom h3.grid-item__title {
            margin: 0 !important;
            text-align: left !important;
            display: block !important;
            position: relative !important;
            z-index: 3 !important;
        }

        /* Override any centering that might be applied */
        .section--{{ section.id }} .grid-item-details--custom * {
            text-align: left !important;
        }

        .section--{{ section.id }} .grid-item-details--custom .custom-arrow {
            position: absolute;
            bottom: 30px;
            left: 30px;
            width: 40px;
            height: 40px;
            background-color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 3;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .section--{{ section.id }} .grid-item-details--custom .custom-arrow svg {
            width: 16px;
            height: 16px;
            fill: #000;
            stroke: #000;
            stroke-width: 1;
        }

        /* Hide button for custom position, arrow replaces it */
        .section--{{ section.id }} .grid-item-details--custom .homepage-featured-box-btn {
            display: none;
        }
    </style>
{% else %}
    {% assign stretch_img = false %}
    <style>
        /* Below-image layout styles */
        .section--{{ section.id }} .content-below-image .homepage-collection-grid-item {
            display: flex;
            flex-direction: column;
        }

        .section--{{ section.id }} .content-below-image .grid-image {
            width: 100%;
            height: 350px; /* Increased from 250px to 350px for taller images */
            overflow: hidden;
            position: relative;
        }

        .section--{{ section.id }} .content-below-image .grid-image .responsive-image-wrapper {
            width: 100%;
            height: 100%;
        }

        .section--{{ section.id }} .content-below-image .grid-image .responsive-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Crop to fit */
            object-position: center;
            transition: transform 0.3s ease;
        }

        /* Hover zoom effect for below-image */
        .section--{{ section.id }} .content-below-image .grid-image:hover img {
            transform: scale(1.05);
        }

        .section--{{ section.id }} .content-below-image .grid-item-details--below-image {
            flex: 1;
            padding: 20px 0;
        }
    </style>
{% endunless %}

{% if section.settings.remove-spacing and section.settings.section-width == 'full' %}
    {% assign no-spacing = ' no-spacing' %}
{% else %}
    {% assign no-spacing = '' %}
{% endif %}

{% if section.settings.override_button_colors %}
  {% render 'button-color-overrides' with
    id: section.id,
    style: section.settings.buttons_style,
    text_color: section.settings.button_text_color,
    background_color: section.settings.button_background_color
  %}
{% endif %}

<div
  class="wrapper-spacing--v wrapper-spacing--h color-scheme--{{ section.settings.colors }}{{ no-spacing }}{% if request.visual_preview_mode %} section-preview{% else %} show-on-scroll{% endif %}"
  data-wetheme-section-type="collection--collection-list"
  data-wetheme-section-id="{{ section.id }}"
  style="--padding-section-top: {{ section.settings.section_padding_top }}px; --padding-section-bottom: {{ section.settings.section_padding_bottom }}px;"
>

	{%- assign items-per-row = section.settings.items-per-row -%}

	<div class="homepage-collections-background{% if section.settings.section-width == 'content' %} width--content{% endif %}">

    {% comment %} Section title and description {% endcomment %}
    {% render 'dynamic-section-header' with section_title: section.settings.title, section_description: section.settings.description %}

    <div class="section--{{ section.id }}">
      {% liquid 
        assign content_placement = 'overlay'
        if section.settings.content-position == 'below-image'
          assign content_placement = 'below'
        endif
      %}

      <div class="collection-grid collection-grid--items-{{ items-per-row }}{% if section.settings.remove-spacing %} remove-spacing expand-grid{% else %} keep-spacing{% endif %}{% if content_placement == 'below' %} content-below-image{% endif %}">

        {% for block in section.blocks %}
          {% liquid 
            assign overlay_color_30 = 'color-mix(in srgb, rgba(' | append: block.settings.overlay_color.rgba | append: '), transparent 70%)'
            assign overlay_color_80 = 'color-mix(in srgb, rgba(' | append: block.settings.overlay_color.rgba | append: '), transparent 20%)'
          %}

          <style>
            .section--{{ section.id }} .block-section--{{ block.id }} .grid-item-details--background-gradient,
            .section--{{ section.id }} .block-section--{{ block.id }} .hover-outer .hover-inner::before {
              background: -webkit-linear-gradient(top, {{ overlay_color_30 }} 0%, {{ overlay_color_80 }} 75%);
              background: linear-gradient(to bottom, {{ overlay_color_30 }} 0%, {{ overlay_color_80 }} 75%);
            }

            .section--{{ section.id }} .block-section--{{ block.id }} .grid-item__title {
              font-size: clamp(1.2rem, 2.5vw, 2rem) !important;
            }

            {% unless section.settings.content-position == 'below-image' %}
              .section--{{ section.id }} .block-section--{{ block.id }} .grid-item__subheading,
              .section--{{ section.id }} .block-section--{{ block.id }} .grid-item__title {
                color: rgba({{ block.settings.overlay_font_color.rgba }}) !important;
              }
            {% endunless %}

            {% if section.settings.content-position == 'custom' %}
              .section--{{ section.id }} .block-section--{{ block.id }} .homepage-collection-grid-inner {
                background-color: rgba({{ block.settings.custom_background_color.rgba }});
              }
            {% endif %}
          </style>

          {%- assign collection = collections[block.settings.collection] -%}
          {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}

          {% if collection == empty %}
            {% comment %}add default state for collection block in storefront editor{% endcomment %}
            {% capture collection_title %}{{ 'homepage.onboarding.collection_title' | t }}{% endcapture %}
          {% else %}
            {% capture collection_title %}{{ collection.title }}{% endcapture %}
          {% endif %}

          <div
            class="homepage-collection-grid-item homepage-collection-grid-item--{{ section.settings.content-position }} block-section--{{ block.id }}"
            data-animate
            data-animate-order="{% render 'block-animation-offset', 
              title: section.settings.title, 
              description: section.settings.description, 
              base: forloop.index 
            %}"
            {{ block.shopify_attributes }}
          >

            {% if section.settings.content-position == 'custom' and block.settings.collection != blank %}
              <a href="{{ collection.url }}" class="grid-item-link" style="display: block; width: 100%; height: 100%; text-decoration: none; color: inherit;">
            {% endif %}

              <div class="homepage-collection-grid-inner{% unless section.settings.content-position == 'below-image' or section.settings.remove-spacing %} block-radius-clip{% endunless %}"{% if section.settings.content-position != 'below-image' and block.settings.overlay-btn-text == blank %} data-animate-hover-zoom{% endif %}{% if section.settings.content-position == 'custom' %} data-animate-hover-zoom{% endif %}>

                <div class="grid-image{% if section.settings.content-position == 'below-image' and section.settings.remove-spacing == false %} block-radius-clip{% endif %}"{% if block.settings.collection == blank and section.settings.content-position == 'below-image' %} data-animate-hover-zoom{% endif %}{% if section.settings.content-position == 'custom' %} data-animate-hover-zoom{% endif %}>

                  {% if section.settings.content-position == 'below-image' and block.settings.collection != blank %}
                    <a href="{{ collection.url }}" class="grid-image-link" style="display: block; width: 100%; height: 100%;">
                  {% endif %}

                    {% if collection == empty %}
                      {% if block.settings.collection_img %}
                        {% render 'responsive-image' with block.settings.collection_img, class: class, allow_stretch: stretch_img %}
                      {% else %}
                        {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                        {% assign svg_placeholder_classes = 'icon icon--placeholder' %}
                        {% if section.settings.remove-spacing == false %}
                          {% assign svg_placeholder_classes = svg_placeholder_classes | append: ' block-radius' %}
                        {% endif %}
                        {% unless section.settings.content-position == 'below-image' %}
                          {% assign svg_placeholder_classes = svg_placeholder_classes | append: ' icon--placeholder--subdued' %}
                        {% endunless %}
                        {{ 'collection-' | append: current | placeholder_svg_tag: svg_placeholder_classes }}
                      {% endif %}
                    {% else %}
                      {% if block.settings.collection_img %}
                        {% assign image = block.settings.collection_img %}
                      {% elsif collection.image %}
                        {% assign image = collection.image %}
                      {% elsif collection.products.size > 0 %}
                        {% assign product = collection.products | first %}
                        {% assign image = product.media[0].preview_image %}
                      {% else %}
                        {% assign image = nil %}
                      {% endif %}

                      {% if section.blocks.size == 1 %}
                        {% assign class = 'homepage-collection-grid-image-single' %}
                      {% else %}
                        {% assign class = '' %}
                      {% endif %}

                      {% render 'responsive-image' with image, class: class, allow_stretch: stretch_img %}
                    {% endif %}

                  {% if section.settings.content-position == 'below-image' and block.settings.collection != blank %}
                    </a>
                  {% endif %}
                </div>

                <div
                  class="grid-item-details--{{ section.settings.content-position }}{% if block.settings.show-gradient-overlay and section.settings.content-position != 'below-image' %} grid-item-details--background-gradient{% endif %}{% if section.settings.content-position == 'hover' %} data-animate-hover{% endif %}"
                  {% if section.settings.content-position == 'hover' %}data-animate-hover{% endif %}
                  {% unless section.settings.content-position == 'below-image' %}style="position:relative;"{% endunless %}
                >
                  {% if section.settings.content-position != 'below-image' and block.settings.overlay-btn-text == blank and block.settings.collection != blank %}
                    <a href="{{ collection.url }}" class="" tabindex="-1" style="width: 100%;">
                  {% endif %}

                    <div class="grid-item__content">
                      {% assign animation_order = 1 %}
                      {% if block.settings.subheading != blank %}
                        {% if section.settings.content-position == 'below-image' and block.settings.collection != blank %}
                          <a href="{{ collection.url }}" class="grid-item__subheading" tabindex="-1">
                        {% endif %}
                          <div class="grid-item__subheading"{% if section.settings.content-position == 'hover' %} data-animate-hover-block data-animate-order="{{ animation_order }}"{% endif %}>{{ block.settings.subheading }}</div>
                        {% if section.settings.content-position == 'below-image' and block.settings.collection != blank %}
                          </a>
                        {% endif %}
                        {% assign animation_order = animation_order | plus: 1 %}
                      {% endif %}

                      {% if section.settings.content-position == 'below-image' and block.settings.collection != blank %}
                        <a href="{{ collection.url }}" tabindex="-1">
                      {% endif %}
                        <h3 class="grid-item__title" style="font-size: clamp(1.2rem, 2.5vw, 2rem);"{% if section.settings.content-position == 'hover' %} data-animate-hover-block data-animate-order="{{ animation_order }}"{% endif %}>{{ collection_title }}</h3>
                      {% if section.settings.content-position == 'below-image' and block.settings.collection != blank %}
                        </a>
                      {% endif %}
                      {% assign animation_order = animation_order | plus: 1 %}

                      {% if block.settings.overlay-btn-text != blank and section.settings.content-position != 'custom' %}
                        {% assign aria_label = block.settings.overlay-btn-text | append: ' - ' | append: collection_title %}

                        {% if section.settings.content-position == 'hover' %}
                          {% capture button_attr %}
                            data-animate-hover-block
                            data-animate-order="{{ animation_order }}"
                          {% endcapture %}
                        {% endif %}

                        {% render 'dynamic-section-button' with
                          id: section.id,
                          link: collection.url,
                          label: block.settings.overlay-btn-text,
                          style: section.settings.buttons_style,
                          a_classes: 'homepage-featured-box-btn',
                          aria_label: aria_label,
                          attributes: button_attr
                        %}
                      {% endif %}
                    </div>

                  {% if section.settings.content-position != 'below-image' and block.settings.overlay-btn-text == blank and block.settings.collection != blank %}
                    </a>
                  {% endif %}

                  {% comment %} Custom arrow for custom content position - replaces button {% endcomment %}
                  {% if section.settings.content-position == 'custom' and block.settings.collection != blank %}
                    <div class="custom-arrow" aria-hidden="true">
                      <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M11.4697 4.46967C11.7626 4.17678 12.2374 4.17678 12.5303 4.46967L19.5303 11.4697C19.8232 11.7626 19.8232 12.2374 19.5303 12.5303L12.5303 19.5303C12.2374 19.8232 11.7626 19.8232 11.4697 19.5303C11.1768 19.2374 11.1768 18.7626 11.4697 18.4697L17.1893 12.75H5C4.58579 12.75 4.25 12.4142 4.25 12C4.25 11.5858 4.58579 11.25 5 11.25H17.1893L11.4697 5.53033C11.1768 5.23744 11.1768 4.76256 11.4697 4.46967Z" fill="#0C0C0D"></path></svg>
                    </div>
                  {% elsif section.settings.content-position == 'custom' %}
                    <div class="custom-arrow">
                      <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" clip-rule="evenodd" d="M11.4697 4.46967C11.7626 4.17678 12.2374 4.17678 12.5303 4.46967L19.5303 11.4697C19.8232 11.7626 19.8232 12.2374 19.5303 12.5303L12.5303 19.5303C12.2374 19.8232 11.7626 19.8232 11.4697 19.5303C11.1768 19.2374 11.1768 18.7626 11.4697 18.4697L17.1893 12.75H5C4.58579 12.75 4.25 12.4142 4.25 12C4.25 11.5858 4.58579 11.25 5 11.25H17.1893L11.4697 5.53033C11.1768 5.23744 11.1768 4.76256 11.4697 4.46967Z" fill="#0C0C0D"></path></svg>
                    </div>
                  {% endif %}
                </div>

              </div>

            {% if section.settings.content-position == 'custom' and block.settings.collection != blank %}
              </a>
            {% endif %}

          </div>
        {% endfor %}
        {% if section.blocks.size == 0 %}
          <div class="placeholder-noblocks">
            {{ 'homepage.onboarding.no_content' | t }}
          </div>
        {% endif %}

      </div>

    </div>

  </div>

</div>

{% schema %}
{
  "name": "Custom collection list",
  "class": "featured-collections-wrapper",
  "max_blocks": 9,
  "settings": [
    {
      "type": "header",
      "content": "t:all.section_heading"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "t:all.Heading",
      "default": "Featured Collections"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:all.Description"
    },
    {
      "type": "header",
      "content": "t:all.Content"
    },
    {
      "type": "range",
      "id": "items-per-row",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "t:sections.collection--collection-list.settings.items-per-row.label",
      "default": 3
    },
    {
      "type": "select",
      "id": "content-position",
      "label": "t:all.Content_position",
      "default": "overlay",
      "options": [
        {
          "value": "hover",
          "label": "t:all.On_hover"
        },
        {
          "value": "overlay",
          "label": "t:all.Overlay"
        },
        {
          "value": "below-image",
          "label": "t:all.Below_image"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:all.Buttons"
    },
    {
      "type": "select",
      "id": "buttons_style",
      "label": "t:all.button_style",
      "default": "filled",
      "options": [
        {
          "value": "filled",
          "label": "t:all.Filled"
        },
        {
          "value": "outlined",
          "label": "t:all.Outlined"
        },
        {
          "value": "underlined",
          "label": "t:all.underlined"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "override_button_colors",
      "label": "t:all.Button_color_override",
      "default": false,
      "info": "t:all.Button_color_override_info"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "t:all.Primary_color",
      "default": "#E68819"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "t:all.Secondary_color",
      "default": "#ffffff",
      "info": "t:all.Secondary_button_color_info"
    },
    {
      "type": "header",
      "content": "t:all.Layout"
    },
    {
      "type": "select",
      "id": "section-width",
      "label": "t:all.Width",
      "default": "full",
      "options": [
        {
          "value": "full",
          "label": "t:all.Full_width"
        },
        {
          "value": "content",
          "label": "t:all.Content_width"
        }
      ]
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "t:all.Spacing_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "t:all.px",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "t:all.Spacing_bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "t:all.px",
      "default": 60
    },
    {
      "type": "checkbox",
      "id": "remove-spacing",
      "default": false,
      "label": "t:all.Remove_spacing"
    },
    {
      "type": "header",
      "content": "t:all.Color"
    },
    {
      "type": "select",
      "id": "colors",
      "label": "t:all.Color_scheme",
      "default": "light",
      "options": [
        {
          "value": "white",
          "label": "t:all.Default"
        },
        {
          "value": "light",
          "label": "t:all.First"
        },
        {
          "value": "accent",
          "label": "t:all.Second"
        },
        {
          "value": "dark",
          "label": "t:all.Third"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "t:all.Collection",
      "settings": [
        {
          "label": "t:all.Collection",
          "id": "collection",
          "type": "collection"
        },
        {
          "id": "collection_img",
          "type": "image_picker",
          "label": "t:all.Image",
          "info": "t:sections.collection--collection-list.blocks.featured_collection.settings.collection_img.info"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "t:all.Subheading",
          "default": "Subheading"
        },
        {
          "type": "text",
          "id": "overlay-btn-text",
          "label": "t:all.Button_label",
          "default": "Shop now"
        },
        {
          "type": "header",
          "content": "t:all.Color"
        },
        {
          "type": "header",
          "content": "t:all.Color"
        },
        {
          "type": "paragraph",
          "content": "t:all.Overlay_info_label"
        },
        {
          "type": "checkbox",
          "id": "show-gradient-overlay",
          "default": false,
          "label": "t:all.Enable_overlay_gradient"
        },
        {
          "type": "color",
          "id": "overlay_font_color",
          "label": "t:all.Text",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "t:all.Overlay",
          "default": "#242424"
        },
        {
          "type": "color",
          "id": "custom_background_color",
          "label": "Custom background color",
          "default": "rgba(0,0,0,0.5)",
          "info": "Background color for custom content position"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom collection list",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": [
      "404",
      "article",
      "blog",
      "cart",
      "collection",
      "index",
      "page",
      "password",
      "product",
      "search"
    ]
  }
}
{% endschema %}
