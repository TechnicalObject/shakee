{%- liquid
  assign social_icons = false
  if settings.sm_facebook_link != blank or settings.sm_instagram_link != blank or settings.sm_x_link != blank or settings.sm_tiktok_link != blank or settings.sm_youtube_link != blank or settings.sm_pinterest_link != blank or settings.sm_linkedin_link != blank or settings.sm_snapchat_link != blank
    assign social_icons = true
  endif

  assign text_items = 0
  for block in section.blocks
    if block.settings.text != blank
      assign text_items = text_items | plus: 1
    endif
  endfor
-%}

<div class="logo-section">
  <div class="logo-container">
    <a href="/pages/contact" class="logo-link">
      {% if section.settings.logo != blank %}
        {% render 'responsive-image' with section.settings.logo, alt: alt | escape, props: 'itemprop="logo"', allow_stretch: true, blur: false, class: 'logo-image', loading: 'eager' %}
      {% else %}
        <h1 class="logo-text">{{ shop.name }}</h1>
      {% endif %}
    </a>
  </div>

  <div class="center-text">
    {%- assign current_item = 0 -%}
    {%- for block in section.blocks -%}
      {%- if block.settings.text != blank -%}
        {%- assign current_item = current_item | plus: 1 -%}
        {%- if current_item > 1 -%}
          <span class="separator">|</span>
        {%- endif -%}
        {%- if block.settings.link != blank -%}
          <a href="{{ block.settings.link }}" class="text-line text-link">{{ block.settings.text | escape }}</a>
        {%- else -%}
          <span class="text-line">{{ block.settings.text | escape }}</span>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  </div>
  
  {%- if social_icons -%}
