<style>
  .logo-section {
    display: flex;
    justify-content: left;
    align-items: center;
    height: 60px;
    padding: 0 20px;
    background: var(--color-background, #ffffff);
  }

  .logo-container {
    display: flex;
    justify-content: left;
    align-items: center;
    max-width: 200px;
  }

  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
  }

  .logo-link:hover {
    opacity: 0.8;
  }

  .logo-image {
    max-height: 40px;
    width: auto;
    object-fit: contain;
    padding-top: {{ section.settings.section_padding }}px;
    padding-bottom: {{ section.settings.section_padding }}px;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: bold;
    margin: 0;
    color: var(--color-foreground, #000000);
  }

  .center-text {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex: 1;
    gap: 20px;
    font-size: {{ section.settings.text_size }}px;
    color: var(--color-foreground, #000000);
    padding: 0 40px;
    min-width: 0;
  }

  .text-line {
    white-space: nowrap;
    flex: 0 0 auto;
  }

  .text-link {
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s ease;
  }

  .text-link:hover {
    opacity: 0.7;
    text-decoration: underline;
  }

  .separator {
    color: var(--color-foreground, #000000);
    opacity: 0.6;
    flex: 0 0 auto;
  }

  .social-icons {
    display: flex;
    align-items: center;
    gap: 15px;
    flex: 0 0 auto;
  }

  .social-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    text-decoration: none;
    transition: transform 0.2s ease, opacity 0.3s ease;
  }

  .social-icon:hover {
    transform: translateY(-2px);
    opacity: 0.8;
  }

  .social-icon svg {
    width: 100%;
    height: 100%;
  }

  @media screen and (max-width: 950px) {
    .logo-section {
      display: flex;
      flex-wrap: wrap;
      height: auto;
      padding: 10px 20px;
      gap: 15px;
    }

    .center-text {
      flex-basis: 100%;
      order: 1;
      justify-content: center;
      padding: 10px 0;
    }

    .logo-container {
      flex-basis: auto;
      order: 2;
      justify-content: flex-start;
      flex: 1;
      display: flex;
      align-items: center;
    }

    .social-icons {
      flex-basis: auto;
      order: 2;
      justify-content: flex-end;
      flex: 0 0 auto;
      display: flex;
      align-items: center;
      margin-left: auto;
    }
  }

  @media screen and (max-width: 768px) {
    .logo-section {
      height: auto;
    }
    
    .logo-image {
      max-height: 30px;
    }
    
    .logo-text {
      font-size: 1.25rem;
    }

    .center-text {
      font-size: {{ section.settings.text_size | minus: 2 }}px;
      gap: 12px;
      padding: 8px 0;
    }

    .social-icons {
      gap: 10px;
    }

    .social-icon {
      width: {{ section.settings.icon_size | times: 0.9 }}px;
      height: {{ section.settings.icon_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .center-text {
      padding: 0 10px;
      gap: 8px;
    }
  }

  @media screen and (max-width: 460px) {
    .center-text {
      position: relative;
      height: 1.5em;
      overflow: hidden;
    }
    
    .center-text .separator {
      display: none;
    }
    
    .center-text .text-line {
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      opacity: 0;
      animation: textRotate {{ text_items | times: 3 }}s infinite;
    }
    
    {% for block in section.blocks %}
      {% if block.settings.text != blank %}
        {% assign item_index = forloop.index0 %}
        .center-text .text-line:nth-child({{ forloop.index | times: 2 | minus: 1 }}) {
          animation-delay: {{ item_index | times: 3 }}s;
        }
      {% endif %}
    {% endfor %}
  }

  @keyframes textRotate {
     0% {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
    {% assign fade_out_start = 100 | divided_by: text_items | minus: 5 %}
    {{ fade_out_start }}% {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
    {% assign fade_out_end = 100 | divided_by: text_items %}
    {{ fade_out_end }}% {
      opacity: 0;
      transform: translateX(-50%) translateY(-10px);
    }
    100% {
      opacity: 0;
      transform: translateX(-50%) translateY(-10px);
    }
  }
</style>

{% schema %}
{
  "name": "Logo Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Top & Bottom Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 10,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "icon_size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "label": "Icon size",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "text_item",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Text item"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Section",
      "category": "Header",
      "blocks": [
        {
          "type": "text_item",
          "settings": {
            "text": "Free Shipping"
          }
        },
        {
          "type": "text_item",
          "settings": {
            "text": "Fast Delivery"
          }
        },
        {
          "type": "text_item",
          "settings": {
            "text": "Refer a friend"
          }
        }
      ]
    }
  ]
}
{% endschema %}
