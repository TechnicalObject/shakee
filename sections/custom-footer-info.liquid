{% style %}
  .footer-info-section {
    padding: {{ section.settings.section_padding }}px;
    background-color: {{ section.settings.background_color }};
  }

  .footer-info-container {
    {% unless section.settings.full_width %}
      max-width: {{ section.settings.max_width }}px;
      margin: 0 auto;
    {% else %}
      padding: 0 {{ section.settings.section_padding }}px;
    {% endunless %}
    display: grid;
    grid-template-columns: auto 1fr;
    gap: {{ section.settings.content_spacing }}px;
    align-items: flex-start;
  }

  .address-section {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.2;
    display: flex;
    align-items: flex-start;
    gap: {{ section.settings.image_spacing }}px;
  }

  .address-icon {
    width: {{ section.settings.image_size }}px;
    height: {{ section.settings.image_size }}px;
    flex-shrink: 0;
    object-fit: cover;
    border-radius: 4px;
  }

  .default-home-icon {
    width: {{ section.settings.image_size }}px;
    height: {{ section.settings.image_size }}px;
    flex-shrink: 0;
    fill: {{ section.settings.text_color }};
  }

  .address-content {
    flex: 1;
  }

  .address-line {
    margin: 0;
    white-space: nowrap;
  }

  .right-content {
    text-align: right;
  }

  .guarantee-section {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.2;
    margin-bottom: 4px;
  }

  .guarantee-text {
    margin: 0;
  }

  .sale-section {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.2;
  }

  .sale-notice {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    margin: 0;
    font-weight: 600;
  }

  .phone-link {
    color: {{ section.settings.text_color }};
    text-decoration: none;
  }

  .phone-link:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 749px) {
    .footer-info-container {
      grid-template-columns: 1fr;
      gap: {{ section.settings.content_spacing | divided_by: 2 }}px;
      text-align: center;
      {% if section.settings.full_width %}
        padding: 0 {{ section.settings.section_padding | times: 0.7 }}px;
      {% endif %}
    }

    .right-content {
      text-align: center;
    }

    .address-line {
      white-space: normal;
    }

    .footer-info-section {
      padding: {{ section.settings.section_padding | times: 0.7 }}px;
    }

    .address-section,
    .guarantee-section,
    .sale-section,
    .sale-notice {
      font-size: {{ section.settings.text_size | times: 0.9 }}px;
    }

    .address-section {
      justify-content: center;
    }

    .address-icon,
    .default-home-icon {
      width: {{ section.settings.image_size | times: 0.8 }}px;
      height: {{ section.settings.image_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="footer-info-section">
  <div class="footer-info-container">
    <div class="address-section">
      {% if section.settings.address_image != blank %}
        <img src="{{ section.settings.address_image | image_url: width: section.settings.image_size }}" 
             alt="Address icon" 
             class="address-icon">
      {% else %}
        <svg class="default-home-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
      {% endif %}
      
      <div class="address-content">
        <p class="address-line">
          {% if shop.address.street != blank %}{{ shop.address.street }}{% endif %}
          {% if shop.phone != blank %}
            {% if shop.address.street != blank %}, {% endif %}
            <a href="tel:{{ shop.phone | replace: ' ', '' }}" class="phone-link">
              {{ shop.phone }}
            </a>
          {% endif %}
        </p>
        <p class="address-line">
          {% if shop.address.zip != blank %}{{ shop.address.zip }}{% endif %}
          {% if shop.address.city != blank %}{% if shop.address.zip != blank %} {% endif %}{{ shop.address.city }}{% endif %}
          {% if shop.address.province != blank %}{% if shop.address.city != blank or shop.address.zip != blank %}, {% endif %}{{ shop.address.province }}{% endif %}
          {% if shop.address.country != blank %}{% if shop.address.province != blank or shop.address.city != blank or shop.address.zip != blank %}, {% endif %}{{ shop.address.country }}{% endif %}
        </p>
      </div>
    </div>

    <div class="right-content">
      <div class="guarantee-section">
        <p class="guarantee-text">
          {{ section.settings.guarantee_text }}
        </p>
      </div>
      <div class="sale-section">
        <p class="sale-notice">
          {{ section.settings.sale_text_prefix }} {% render 'end-of-month' %}
        </p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer Information",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "guarantee_text",
      "label": "Guarantee text",
      "default": "Označení nezávislý člen Herbalife Nutrition pro český trh garantuje 100% originalitu a čerstvost produktů."
    },
    {
      "type": "text",
      "id": "sale_text_prefix",
      "label": "Sale text prefix",
      "default": "Slevy jsou platné do"
    },
    {
      "type": "header",
      "content": "Address Icon"
    },
    {
      "type": "image_picker",
      "id": "address_image",
      "label": "Address icon image",
      "info": "Square image recommended. If no image is selected, a default home icon will be shown."
    },
    {
      "type": "range",
      "id": "image_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Icon size",
      "default": 24
    },
    {
      "type": "range",
      "id": "image_spacing",
      "min": 8,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Icon spacing",
      "default": 12
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Stretch to full width",
      "default": false
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 1400,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 1200,
      "info": "Only applies when full width is disabled"
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 6,
      "max": 24,
      "step": 2,
      "unit": "px",
      "label": "Section padding",
      "default": 12
    },
    {
      "type": "range",
      "id": "content_spacing",
      "min": 10,
      "max": 30,
      "step": 5,
      "unit": "px",
      "label": "Content spacing",
      "default": 20
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#242424"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 11,
      "max": 16,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 13
    }
  ],
  "presets": [
    {
      "name": "Footer Information"
    }
  ]
}
{% endschema %}